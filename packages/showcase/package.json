{
  "name": "@showcasejs/cli",
  "version": "0.0.1",
  "description": "Next-generation React stories",
  "author": "Alex Yuan",
  "repository": "github:yuan-alex/showcase",
  "type": "module",
  "main": "./dist/api/api.js",
  "exports": {
    "require": "./dist/api/api.cjs",
    "import": "./dist/api/api.js"
  },
  "types": "./dist/api/api.d.ts",
  "keywords": [
    "cli",
    "react",
    "stories",
    "storybook"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=14.16"
  },
  "bin": {
    "showcase": "./dist/cli/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev:cli": "pnpm build:cli && pnpm cli dev",
    "dev:renderer": "pnpm vite",
    "start:renderer": "vite ./dist/renderer --config=./vite.config.mts --port=3000 && tailwindcss -i ./src/renderer/tailwind.css -o ./dist/renderer/public/static/tailwind.css --watch",
    "build": "pnpm build:api && pnpm build:cli && pnpm build:renderer",
    "build:api": "tsup ./src/api/api.ts --clean --format=cjs,esm --target=es2015 --out-dir=dist/api --dts",
    "build:cli": "tsup-node ./src/cli/cli.mts --clean --format=esm --target=node14 --out-dir=dist/cli",
    "build:renderer": "tsx ./scripts/build-renderer.mts && pnpm build:tailwind",
    "build:tailwind": "tailwindcss -i ./src/renderer/tailwind.css -o ./dist/renderer/public/static/tailwind.css",
    "cli": "node ./dist/cli/cli.js"
  },
  "peerDependencies": {
    "react": ">=16.14.0",
    "react-dom": ">=16.14.0"
  },
  "dependencies": {
    "@componentdriven/csf": "0.0.2-alpha.0",
    "@heroicons/react": "^2.0.14",
    "@showcasejs/react": "workspace:*",
    "@uiw/react-codemirror": "^4.19.7",
    "@vitejs/plugin-react": "^3.0.1",
    "boxen": "^7.0.1",
    "chalk": "^5.2.0",
    "chokidar": "^3.5.3",
    "fs-extra": "^11.1.0",
    "globby": "^13.1.3",
    "handlebars": "^4.7.7",
    "prop-types": "^15.8.1",
    "react-colorful": "^5.6.1",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.8.0",
    "react-shadow": "^20.0.0",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@deanc/esbuild-plugin-postcss": "^1.0.2",
    "@primer/react": "^35.18.0",
    "@types/fs-extra": "^11.0.1",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@types/yargs": "^17.0.20",
    "autoprefixer": "^10.4.13",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.5",
    "postcss": "^8.4.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.1.2",
    "styled-components": "^5.3.6",
    "tailwindcss": "^3.2.4",
    "ts-node": "^10.9.1",
    "tsup": "^6.5.0",
    "tsx": "^3.12.2",
    "typescript": "^4.9.4",
    "vite": "^4.0.4"
  }
}
